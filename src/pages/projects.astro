---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.tsx";
import Intro from "@/components/Intro.tsx";
import ProjectList from "@/components/ProjectList.tsx";

const intro = {
    headline: "Projects",
    body: "Past or present, professional, personal, or open-source. Software or not. Here's a list of some of the things I've worked on.",
}

const projects = [
    {
        title: "RocketCRM",
        description: "Modern and intuitive CRM for small businesses.",
        image: 'https://app.rocketcrm.io/assets/RcktLogoDark-cdd2c334.png',
        link: {
            name: "rocketcrm.io",
            url: "https://rocketcrm.io",
        }
    },
    {
        title: "Simple API Load Tester",
        description: "A simple API load tester built with React and Go.",
        image: 'https://uploads.rocketcrm.io/org_8nVyCkQ2MHS1iHtt/uploads/1717482630461-thumb-3_-_Michael_Bohrer-003.jpg',
        link: {
            name: "simple-api-load-tester",
            url: "https://github.com/mikeboe/simple-api-load-tester",
        }
    },
    {
        title: "React 8-bit Avatar",
        description: "React component to create Github-like 8-bit avatars.",
        image: 'https://uploads.rocketcrm.io/org_8nVyCkQ2MHS1iHtt/uploads/1717482630461-thumb-3_-_Michael_Bohrer-003.jpg',
        link: {name: 'react-8bit-avatar', url: "https://github.com/mikeboe/react-8bit-avatar"}
    }

]
---

<Layout title="Welcome to Astro.">
    <Header />
    <Intro headline={intro.headline} body={intro.body} />
